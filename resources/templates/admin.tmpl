<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8"/>
        <title>Admin Panel</title>
        <link rel="stylesheet" href="/public/css/bootstrap.min.css">
        
    </head>
    <body>
        <div id="register_area" class="container col-md-12" style="margin-top:200px;">
            <input type="button" id="pause" class="btn btn-danger btn-large" value="Pause" name="Pause" />
            <input type="button" id="resume" class="btn btn-success btn-large" value="Resume" name="Resume" />

            <br />
            <br />
            <input type="button" id="start" class="btn btn-primary btn-large" value="Start" name="Start" />
            <input type="button" id="next" class="btn btn-primary btn-large" value="Next" name="Next" />

        </div>     
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script src="/public/js/bootstrap.min.js"></script>
        <script type="text/javascript">
         $(document).ready(function(){
             $(function(){
                 $("#pause").click(function(){ $.get("/draft/pause"); });
                 $("#resume").click(function(){ $.get("/draft/resume"); });
                 $("#start").click(function(){ $.get("/draft/start"); });
                 $("#next").click(function(){ $.get("/draft/next"); });
             });
         });
        </script>
    </body>
</html>
